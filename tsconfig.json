{
  "include": [
    "src/**/*",
    "typings/**/*",
    "__test__/**/*"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": false,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "exclude": ["lib", "node_modules"]
}
